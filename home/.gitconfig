[alias]
  ignore = update-index --assume-unchanged
  unignore = update-index --no-assume-unchanged
  ignored = !git ls-files -v | grep "^[[:lower:]]"
	integrate = !sh -c 'git push $1 $2:ready-to-merge/into-master/${2}' -
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative
[user]
	name = Alistair McKinnell
  useconfigonly = true
	email = alistairm@nulogy.com
[push]
	default = current
[core]
	excludesfile = /Users/alistairm/.gitignore
  autocrlf = input
	commentchar = $
	pager = less -R --tabs=2 -RFX
	hooksPath = /Users/alistairm/.git-templates/hooks
[remote "origin"]
	push = HEAD
[branch]
	autosetupmerge = true
[diff]
  compactionheuristic = true
	renameLimit = 10000
[color]
	branch = auto
	diff = auto
	ui = true
[fetch]
  prune = true
[credential]
	helper = osxkeychain
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/alistair/.stCommitMsg
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	ff = only
[merge "no-assets"]
	driver = true
